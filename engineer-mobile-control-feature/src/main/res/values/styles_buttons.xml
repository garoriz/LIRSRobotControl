<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="btn_toggle_inside_common">
        <item name="android:background">@drawable/layer_list_toggle_move_bg_for_engineer</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="btn_toggle_inside_common.joints">
        <item name="android:layout_width">@dimen/btn_action_dimen_joints</item>
        <item name="android:layout_height">@dimen/btn_action_dimen_joints</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="btn_toggle_outside">
        <item name="android:background">@drawable/selector_toggle_hider_src</item>
        <item name="android:fontFamily" >@font/century_gothic_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="btn_toggle_outside.joints">
        <item name="android:layout_width">@dimen/btn_toggle_dimen_joints</item>
        <item name="android:layout_height">@dimen/btn_toggle_dimen_joints</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="btn_toggle_inside_common.joints.gripper">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/century_gothic_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="btn_stop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/selector_toggle_stop_src</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="btn_toggle_inside_common.movement">
        <item name="android:layout_width">@dimen/btn_action_dimen_movement</item>
        <item name="android:layout_height">@dimen/btn_action_dimen_movement</item>
    </style>

    <style name="btn_toggle_outside.movement">
        <item name="android:layout_width">@dimen/btn_toggle_dimen_movement</item>
        <item name="android:layout_height">@dimen/btn_toggle_dimen_movement</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
